{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    // be explicit about types included
    // to avoid clashing with Jest types
    "types": ["cypress", "node"],
    "isolatedModules": false,
    "strict": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
